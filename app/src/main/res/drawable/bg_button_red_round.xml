<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <!-- 设置一个黑色边框 -->
            <stroke android:width="1px" android:color="@color/red" />
            <!-- 设置四个圆角的半径 -->
            <corners android:bottomLeftRadius="10px" android:bottomRightRadius="10px" android:topLeftRadius="10px" android:topRightRadius="10px" />
            <!-- 设置一下边距,让空间大一点 -->
            <!--    <padding-->
            <!--        android:bottom="15dp"-->
            <!--        android:left="15dp"-->
            <!--        android:right="15dp"-->
            <!--        android:top="15dp" />-->
            <solid android:color="@color/red" />
        </shape>
    </item>

    <item android:state_pressed="false">
        <shape>
            <!-- 设置一个黑色边框 -->
            <stroke android:width="1px" android:color="@color/red_500" />
            <!-- 设置四个圆角的半径 -->
            <corners android:bottomLeftRadius="10px" android:bottomRightRadius="10px" android:topLeftRadius="10px" android:topRightRadius="10px" />
            <!-- 设置一下边距,让空间大一点 -->
            <!--    <padding-->
            <!--        android:bottom="15dp"-->
            <!--        android:left="15dp"-->
            <!--        android:right="15dp"-->
            <!--        android:top="15dp" />-->
            <solid android:color="@color/red_500" />
        </shape>
    </item>

</selector>