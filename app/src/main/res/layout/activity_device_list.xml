<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/whitesmoke">

        <include layout="@layout/all_title" />

        <com.daimajia.numberprogressbar.NumberProgressBar
            android:id="@+id/number_progress_bar"
            style="@style/NumberProgressBar_Default"
            custom:progress_reached_color="#3498DB"
            custom:progress_unreached_color="#CCCCCC" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y80"
            android:orientation="horizontal">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/et_search"
                android:textSize="@dimen/x32"
                android:background="@color/white"
                android:paddingLeft="@dimen/x24"
                android:hint="请输入设备名称"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="搜索"
                android:gravity="center"
                android:textSize="@dimen/x32"
                android:textColor="@color/text_blue"
                android:id="@+id/tv_search"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingLeft="@dimen/x24"
                android:paddingRight="@dimen/x24"/>

        </RelativeLayout>
        <RelativeLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioGroup
                android:id="@+id/rg_device"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_scan"
                    android:text="设备扫描列表"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_bond"
                    android:text="设备绑定列表"/>

            </RadioGroup>

        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="设备总数"
            android:layout_marginLeft="@dimen/x24"
            android:layout_marginTop="@dimen/y7"
            android:textSize="@dimen/x24"
            android:id="@+id/tv_count"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_devices_scan"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/x20"/>

            <androidx.recyclerview.widget.RecyclerView
                android:visibility="gone"
                android:id="@+id/rv_devices_bond"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/x20"/>
        </RelativeLayout>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/mPopupLayout"
        android:visibility="gone"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/transparent_black"
            android:id="@+id/v_transparent_black"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/y96"
            android:gravity="center"
            android:textSize="@dimen/x32"
            android:background="@color/white"
            android:text="绑定/解绑"
            android:textColor="@color/black"
            android:id="@+id/tv_bond"/>


        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/black"/>
        <TextView
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y96"
            android:gravity="center"
            android:textSize="@dimen/x32"
            android:text="取消"
            android:textColor="@color/text_blue"
            android:id="@+id/tv_cancel"/>
    </LinearLayout>



</RelativeLayout>