<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_fragment_title"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y88"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_return"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/x24"
        android:src="@mipmap/iv_return" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/fragment_title_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x24"
            android:layout_marginTop="@dimen/y10"
            android:layout_marginBottom="@dimen/y2"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:text="@string/app_name"
            android:textColor="@color/text_blue"
            android:textSize="@dimen/x32" />

        <TextView
            android:id="@+id/fragment_title_mac"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x24"
            android:layout_marginBottom="@dimen/y9"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:text="111"
            android:textSize="@dimen/x28"
            android:visibility="gone" />
    </LinearLayout>


    <ImageView
        android:id="@+id/iv_setting"
        android:layout_width="@dimen/x40"
        android:layout_height="@dimen/y40"
        android:layout_marginRight="@dimen/x24"
        android:src="@mipmap/setting"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_refresh"
        android:layout_width="@dimen/x40"
        android:layout_height="@dimen/y40"
        android:layout_marginRight="@dimen/x24"
        android:src="@mipmap/iv_refresh"
        android:visibility="gone" />


    <Button
        android:id="@+id/bt_ip_setting"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="@string/IP_SETTING"
        android:textSize="@dimen/x30"
        android:visibility="gone" />

    <Button
        android:id="@+id/bt_ble_status"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="@string/STOP_SCAN"
        android:textSize="@dimen/x30"
        android:visibility="gone" />

    <Button
        android:id="@+id/bt_scan"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/y64"
        android:background="@drawable/bg_button_blue_round"
        android:text="扫二维码"
        android:visibility="gone"
        android:textColor="@color/white"
        android:layout_marginRight="@dimen/x24"
        android:textSize="@dimen/x32" />

    <Button
        android:id="@+id/bt_commit"
        android:layout_width="@dimen/x152"
        android:layout_height="@dimen/y64"
        android:background="@drawable/bg_button_blue_round"
        android:text="@string/submit"
        android:visibility="gone"
        android:textColor="@color/white"
        android:layout_marginRight="@dimen/x24"
        android:textSize="@dimen/x32" />

</LinearLayout>